<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:uiRotateGestures="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="top">

        <SearchView
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_border"
            android:closeIcon="@drawable/baseline_clear_24"
            android:iconifiedByDefault="false"
            android:queryBackground="@color/transparent"
            android:queryHint="@string/search" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/restaurantBtn"
                android:layout_width="78dp"
                android:layout_height="34dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/pretendardbold"
                android:text="@string/restaurant" />

            <Button
                android:id="@+id/cafeBtn"
                android:layout_width="78dp"
                android:layout_height="34dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/pretendardbold"
                android:text="@string/cafe" />

            <Button
                android:id="@+id/lodgingBtn"
                android:layout_width="78dp"
                android:layout_height="34dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/pretendardbold"
                android:text="@string/lodging" />

            <Button
                android:id="@+id/spotBtn"
                android:layout_width="78dp"
                android:layout_height="34dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/pretendardbold"
                android:text="@string/spot" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:layout_gravity="bottom"
        android:background="@drawable/box_border"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/bar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@drawable/nav_item_selector"
        app:itemTextColor="@drawable/nav_item_selector"
        app:menu="@menu/bottom_navigation_menu"
        app:itemTextAppearanceActive="@style/BottomNavigationView"
        app:itemTextAppearanceInactive="@style/BottomNavigationView" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
