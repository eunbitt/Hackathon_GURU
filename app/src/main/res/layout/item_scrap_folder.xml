<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_scrap_folder"
    android:layout_width="195dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_background"
    android:padding="8dp">

    <!-- Button centered within the layout -->
    <Button
        android:id="@+id/ScrapFolderItem"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:backgroundTint="#F5F6F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_scrap_folder_item_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

    <!-- TextView centered below the Button -->

    <!-- ImageView aligned to the top end corner of the Button -->
    <TextView
        android:id="@+id/text_scrap_folder_item_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ScrapFolderItem" />

    <ImageView
        android:id="@+id/MoreButton"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_scrap_folder_item_name"
        app:layout_constraintTop_toBottomOf="@+id/ScrapFolderItem"
        app:srcCompat="@drawable/more" />

</androidx.constraintlayout.widget.ConstraintLayout>
