<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_scrap_folder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_background"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/ScrapFolderItem"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:backgroundTint="#F5F6F6" />

        <TextView
            android:id="@+id/text_scrap_folder_item_name"
            android:layout_width="140dp"
            android:layout_height="17dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Remove button with baseline_remove_circle_24 icon, initially hidden -->
        <ImageView
            android:id="@+id/removeFolderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/baseline_remove_circle_24"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
